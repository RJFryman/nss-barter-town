extends ../shared/template

block content
  .row
    .small-2.columns
      img(src= showUser.pic)
    .small-10.columns
      h1= showUser.name
  .row
    .small-12.columns
      h2= showUser.email
  .row
    .small-12.columns
      h3= showUser.name + '\'s items'
      table
        thead
          th Name
          th Year
          th Description
          th Cost
          th Tags
          th
        tbody
          each item in items
            tr
              td
                a(href='/items/'+item._id.toString())= item.name
              td= item.year
              td= item.description
              td= '$' + item.cost
              td= item.tags.join(', ')
              if user._id.toString() === showUser._id.toString()
                td
                  form(action='/items/'+item._id.toString(), method='POST')
                    input(type='hidden', name='_method', value='delete')
                    button.alert.tiny Delete Item
